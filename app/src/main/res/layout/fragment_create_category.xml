<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/editText_category_name_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_category_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_category_create_text" />

        <Button
            android:id="@+id/button_category_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_category_cancel_text"/>

    </LinearLayout>

</LinearLayout>