<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Genaeral">
        <SwitchPreference
            app:key="pref_key_enable_notifications"
            app:summary="Aktiviere, um Benachrichtigungen fÃ¼r neue Notizen zu erhalten"
            app:title="Benachrichtigungen aktivieren" />

        <SwitchPreference
            app:defaultValue="false"
            app:key="pref_key_dark_mode"
            app:summary="Enable dark mode"
            app:title="Dark Mode" />

        <ListPreference
            app:defaultValue="en"
            app:entries="@array/language_options"
            app:entryValues="@array/language_values"
            app:key="pref_key_language"
            app:summary="Select your preferred language"
            app:title="Language" />

        <EditTextPreference
            app:defaultValue=""
            app:key="pref_key_username"
            app:summary="Enter your username"
            app:title="Username" />

    </PreferenceCategory>
    <PreferenceCategory app:title="Notizen">
        <ListPreference
            app:defaultValue="medium"
            app:entries="@array/font_size_options"
            app:entryValues="@array/font_size_values"
            app:key="pref_key_font_size"
            app:summary="Select the font size"
            app:title="Font Size" />

        <ListPreference
            app:defaultValue="yellow"
            app:entries="@array/note_color_options"
            app:entryValues="@array/note_color_values"
            app:key="pref_key_default_note_color"
            app:summary="Select the default color for new notes"
            app:title="Default Note Color" />


        <SwitchPreference
            app:defaultValue="true"
            app:key="pref_key_auto_save_notes"
            app:summary="Enable/disable automatic saving of notes"
            app:title="Auto Save Notes" />

        <ListPreference
            app:defaultValue="date"
            app:entries="@array/note_sort_options"
            app:entryValues="@array/note_sort_values"
            app:key="pref_key_note_sort_order"
            app:summary="Select the sort order for notes"
            app:title="Note Sort Order" />

        <SwitchPreference
            app:defaultValue="true"
            app:key="pref_key_show_note_timestamp"
            app:summary="Enable/disable displaying timestamps on notes"
            app:title="Show Note Timestamp" />

        <SwitchPreference
            app:defaultValue="false"
            app:key="pref_key_enable_note_reminders"
            app:summary="Enable/disable setting reminders for notes"
            app:title="Enable Note Reminders" />
    </PreferenceCategory>
</PreferenceScreen>